@model CamposDealer.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar cliente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idCliente" />
            <div class="form-group">
                <label asp-for="nmCliente" class="control-label"></label>
                <input asp-for="nmCliente" class="form-control" />
                <span asp-validation-for="nmCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidade" class="control-label"></label>
                <input asp-for="cidade" class="form-control" />
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
            </p>
            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
