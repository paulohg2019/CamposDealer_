@model CamposDealer.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir produto</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dscProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dscProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.vlrUnitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vlrUnitario)
        </dd>
    </dl>
    
    <form asp-action="Delete" onsubmit="return confirm('Tem certeza de que deseja excluir este produto?');">
        <input type="hidden" asp-for="idProduto" />
        <p>
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </p>
    </form>
</div>
