@model CamposDealer.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Venda</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.qtdVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.qtdVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vlrUnitarioVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vlrUnitarioVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vlrTotalVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vlrTotalVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dthVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dthVenda)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.nmCliente)
        </dd>
        <dt class="col-sm-2">
            Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.dscProduto)
        </dd>
    </dl>

    <form asp-action="Delete" onsubmit="return confirm('Tem certeza de que deseja excluir esta venda?');">
        <input type="hidden" asp-for="idVenda" />
        <p>
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </p>
    </form>
</div>
